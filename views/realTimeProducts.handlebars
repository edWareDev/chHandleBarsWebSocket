<h1>Stock</h1>
<h2>Agregar Productos</h2>

<label for="productName">
    Nombre: <input id="productName" name="productName" type="text">
</label>
<label for="productDescription">
    Descripción: <input id="productDescription" name="productDescription" type="text">
</label>
<label for="productPrice">
    Precio: <input id="productPrice" name="productPrice" type="number" min="0">
</label>
<label for="productStatus">
    Estado:
    <select name="select" id="productStatus">
        <option value="1" selected>Activo</option>
        <option value="0">Inactivo</option>
    </select>
</label>
<label for="productCategory">
    Categoría: <input id="productCategory" name="productCategory" type="text">
</label>
{{!-- <label for="productThumbnail">
    Imágenes: <input type="file" id="productThumbnail" name="productThumbnail" accept="image/png, image/jpeg" multiple>
</label> --}}
<label for="productCode">
    Código: <input id="productCode" name="productCode" type="text">
</label>
<label for="productStock">
    Stock: <input id="productStock" name="productStock" type="number" min="0" value="0">
</label>
<button id="btnAgregar">Agregar</button>



<h2>Productos</h2>
<div class="productos">
    {{#if hayProductos}}
    <ul>
        {{#each productos}}
        <li>
            <h3>{{this.title}} - {{this.description}}</h3>
            <a href="#">Precio: $ {{this.price}}</a>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No hay Productos</p>
    {{/if}}
</div>

